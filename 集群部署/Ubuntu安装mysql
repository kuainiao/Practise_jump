sudo apt-get install wget gcc gcc-c++ ncurses ncurses-devel cmake numactl.x86_64 libaio
sudo groupadd mysql
sudo useradd -g mysql mysql
apt-get install libaio1
apt-get install numactl
mkdir -p /etc/mysql
mkdir /var/log/mysql

# 下载安装包并上传
wget http://mirrors.ustc.edu.cn/mysql-ftp/Downloads/MySQL-5.7/mysql-5.7.29-linux-glibc2.12-x86_64.tar.gz

tar -zxvf mysql-5.7.29-linux-glibc2.12-x86_64.tar.gz -C /usr/local/
mv /usr/local/mysql-5.7.29-linux-glibc2.12-x86_64/ /usr/local/mysql
cd /usr/local/mysql/


cat >/etc/my.cnf <<EOF
[client]
port=3306
socket=/tmp/mysql.sock
[mysqld]
port=3306
socket=/tmp/mysql.sock
skip-external-locking
key_buffer_size = 38M
max_allowed_packet = 1M
table_open_cache = 64
sort_buffer_size = 512K
net_buffer_length = 8K
read_buffer_size = 256K
read_rnd_buffer_size = 512K
myisam_sort_buffer_size = 8M
basedir=/usr/local/mysql
datadir=/usr/local/mysql/data
bind-address=0.0.0.0
innodb_flush_log_at_trx_commit=1
sync_binlog=1
log-bin=/var/lib/mysql/mysql_logbin
log-error=/var/log/mariadb/mariadb.log
slow_query_log =1
slow_query_log_file=/tmp/mysql_slow.log
server-id=1
symbolic-links=0
[mysqld_safe]
pid-file=/var/run/mariadb/mariadb.pid
EOF

chmod 664 /etc/my.cnf

4、创建用户组和用户
sudo groupadd mysql
sudo useradd -r -g mysql -s /bin/false mysql

mkdir -p /usr/local/mysql/data
chown mysql:mysql /usr/local/mysql/data
mkdir -p /var/lib/mysql
chown mysql:mysql /var/lib/mysql
mkdir -p /var/log/mariadb
chmod -R 777 /var/log/mariadb/
chown mysql:mysql /var/log/mariadb/
touch /var/log/mariadb/mariadb.log
mkdir -p /var/run/mariadb
chown mysql:mysql /var/run/mariadb/
touch /var/run/mariadb/mariadb.pid
mv /var/lib/mysql/ /var/lib/mysql_bak/
cat  >> /etc/profile << EOF
export PATH=\$PATH:/usr/local/mysql/bin:/usr/local/mysql/lib
EOF
source /etc/profile
sudo mysqld --defaults-file=/etc/my.cnf --user=mysql --initialize-insecure
sudo mysqld --defaults-file=/etc/my.cnf --initialize-insecure --user=mysql --basedir=/usr/local/mysql --datadir=/usr/local/mysql/data

cd /usr/local/mysql/
cp /usr/local/mysql/support-files/mysql.server /etc/init.d/mysql
chmod +x /etc/init.d/mysqld
chkconfig --add mysqld
mysqld_safe --defaults-file=/etc/my.cnf &
启动mysql
查看mysql是否启动
service mysqld status
# 启动mysql
service mysqld start
# 停止mysql
service mysqld stop
# 重启mysql
service mysqld restart

/etc/init.d/mysql start

firewall-cmd --zone=public --add-port=3318/tcp --permanent
firewall-cmd --reload

mysql -u root -p 
########################################
# 修改本地root用户密码
update mysql.user set authentication_string=password('ADSHgyu@12') where user='root' and Host = 'localhost';
flush privileges;
# 创建用户
create user 'ityym'@'%' identified by 'ADSHgyu@12';
grant replication slave on *.* to 'ityym'@'%' identified by 'ADSHgyu@12';
# 创建数据库并授权
CREATE DATABASE `ityym` DEFAULT CHARACTER SET utf8 COLLATE utf8_general_ci;
GRANT ALL PRIVILEGES ON o2oa.* TO 'ityym'@'%' identified by 'ADSHgyu@12' with grant option;
flush privileges;
